#!/usr/bin/env bash

RUN_DIR="/var/vcap/sys/run/cc_deployment_updater"
LOG_DIR="/var/vcap/sys/log/cc_deployment_updater"
PIDFILE="${RUN_DIR}/cc_deployment_updater.pid"

export CLOUD_CONTROLLER_NG_CONFIG=/var/vcap/jobs/cc_deployment_updater/config/cloud_controller_ng.yml
export BUNDLE_GEMFILE=/var/vcap/packages/cloud_controller_ng/cloud_controller_ng/Gemfile

export C_INCLUDE_PATH="/var/vcap/packages/libpq/include:${C_INCLUDE_PATH}"
export LIBRARY_PATH="/var/vcap/packages/libpq/lib:${LIBRARY_PATH}"
export LANG="en_US.UTF-8"
export NEWRELIC_ENABLE="false"

source /var/vcap/packages/capi_utils/syslog_utils.sh
source /var/vcap/packages/capi_utils/pid_utils.sh

tee_output_to_sys_log_and_file "${LOG_DIR}" "$(basename "$0")"

function setup_environment() {
  mkdir -p "${RUN_DIR}"
}

case $1 in
start)
  setup_environment

  pid_guard "$PIDFILE" "Cloud controller deployment updater"

  echo $$ > "$PIDFILE"

  exec /var/vcap/jobs/cc_deployment_updater/bin/cc_deployment_updater
  ;;

stop)
  kill_and_wait "$PIDFILE" 10
  ;;

*)
  echo "Usage: cc_deployment_updater_ctl {start|stop}"
  ;;

esac
